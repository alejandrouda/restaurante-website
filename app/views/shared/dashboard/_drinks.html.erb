<div class="main-container">
    <div class="sec-container">
        <%=  link_to 'new', new_restaurante_dashboard_drink_path(@current_restaurante, @current_dashboard) %>
        <br><br><br><br>
        <% @drinks.each do |drink| %>
            <div class="dashboard-meal-card">
                <%= link_to [@current_restaurante, @current_dashboard, drink] do%>
                    <%= drink.name %>
                    <%= drink.price %>
                    
                <% end %>    
                <%=  link_to 'edit', edit_restaurante_dashboard_drink_path(@current_restaurante, @current_dashboard, drink) %>
                <%= link_to 'Delete', [@current_restaurante, @current_dashboard, drink], method: :delete, data: {confirm: 'Are you sure?'} %>
            </div>
            <br>
        <% end %>
    </div>
</div>